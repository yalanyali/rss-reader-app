<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pme.rssreader">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.settings.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <activity
            android:name=".view.item.list.ItemListActivity"
            android:label="@string/title_activity_item_view" />

        <activity android:name=".view.FeedListActivity" />
        <activity android:name=".view.NewFeedActivity" />

        <activity
            android:name=".view.item.details.DetailsActivity"
            android:label="@string/title_activity_details" />
    </application>

</manifest>